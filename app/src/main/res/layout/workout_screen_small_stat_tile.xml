<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgStatIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/stats_descr_heartrate"
        android:src="@drawable/nihi_ic_review_hr" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <nz.ac.auckland.nihi.trainer.views.FontableTextView
            android:id="@+id/txtStatDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stats_descr_heartrate" />

        <nz.ac.auckland.nihi.trainer.views.FontableTextView
            android:id="@+id/txtStatValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_heartrate" />
    </LinearLayout>

</LinearLayout>