<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <nz.ac.auckland.nihi.trainer.views.FontableTextView
            android:id="@+id/txtWeekDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:text="@string/placeholder_large_day"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <nz.ac.auckland.nihi.trainer.views.FontableTextView
            android:id="@+id/txtDayOfMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txtWeekDay"
            android:text="@string/placeholder_number_twodigit"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <nz.ac.auckland.nihi.trainer.views.FontableTextView
            android:id="@+id/txtPostfix"
            style="@style/GreyedOutTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txtDayOfMonth"
            android:text="@string/ordinal_th"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</FrameLayout>