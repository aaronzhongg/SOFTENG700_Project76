<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <nz.ac.auckland.nihi.trainer.views.FontableTextView
        android:id="@+id/txtSymptom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/symptom_dyspnoea"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <nz.ac.auckland.nihi.trainer.views.FontableTextView
        android:id="@+id/txtRParen"
        style="@style/GreyedOutTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:text="@string/rparen"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="italic" />

    <nz.ac.auckland.nihi.trainer.views.FontableTextView
        android:id="@+id/txtTime"
        style="@style/GreyedOutTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/txtRParen"
        android:text="@string/placeholder_duration"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="italic" />

    <nz.ac.auckland.nihi.trainer.views.FontableTextView
        style="@style/GreyedOutTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@id/txtTime"
        android:text="@string/lparen"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="italic" />

    <nz.ac.auckland.nihi.trainer.views.FontableTextView
        android:id="@+id/txtDash"
        style="@style/GreyedOutTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSymptom"
        android:layout_gravity="center_vertical"
        android:text="- "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <nz.ac.auckland.nihi.trainer.views.FontableTextView
        android:id="@+id/txtSymptomStrength"
        style="@style/GreyedOutTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSymptom"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/txtDash"
        android:text="@string/symptom_strength_extreme"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>